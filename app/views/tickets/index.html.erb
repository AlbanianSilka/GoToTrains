<p id="notice"><%= notice %></p>

<h1>Tickets</h1>

<table>
  <thead>
  <tr>
    <th>Номер билета Номер поезда Начальная станция Конечная станция</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @tickets.each do |ticket| %>
    <tr>
      <%if ticket.user_id == current_user.id %>
      <td><%= ticket.id%></td>
      <td><%= ticket.train.number%></td>
      <td><%= ticket.first_station.title%></td>
      <td><%= ticket.last_station.title %></td>
      <td><%= link_to 'Показать билет', ticket %></td>
      <td><%= link_to 'Вернуть билет', ticket, method: :delete, data: { confirm: 'Вы уверены, что хотите удалить этот билет?' } %></td>
        <% else %>
        <% nil %>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Купить билет', new_ticket_path %>