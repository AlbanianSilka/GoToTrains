<p id="notice"><%= notice %></p>

<h1><%= t('admin.tickets.user_tickets') %></h1>

<table>
  <thead>
  <tr>
    <th><%= t('tickets.ticket_show_form') %></th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @tickets.each do |ticket| %>
    <tr>
      <%if ticket.user_id == current_user.id %>
      <td><%= ticket.id%></td>
      <td><%= ticket.train.number%></td>
      <td><%= ticket.first_station.title%></td>
      <td><%= ticket.last_station.title %></td>
      <td><%= link_to 'Показать билет', ticket %></td>
      <td><%= link_to 'Вернуть билет', tickets_path(ticket), method: :delete, data: { confirm: 'Вы уверены, что хотите удалить этот билет?' } %></td>
        <% else %>
        <% nil %>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to t('admin.tickets.user_buy_ticket'), new_ticket_path %>