<h1>Result</h1>
<h2>Routes</h2>
<ul>
  <% @routes.each do |route| %>
    <li>
      <strong>Route <%= route.id %></strong>
      <p>Outgo time <%= @first_station.departure_time(route) %></p>
      <p>Arrive time <%= @last_station.arrival_time(route) %></p>
      <h3>Trains</h3>
      <ul>
        <% route.trains.each do |train| %>
          <li>
            <p><%= train.number %></p>
            <p><%= link_to 'Buy ticket', new_ticket_path(train, first_station: @first_station.id, last_station: @last_station.id) %></p>
          </li>
        <% end %>
      </ul>
    </li>
  <% end %>
</ul>