<p id="notice"><%= notice %></p>

<h1><%= t('.title') %></h1>

<table>
  <thead>
  <tr>
    <th><%= t('tickets.ticket_show_form') %></th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @tickets.each do |ticket| %>
    <tr>
      <td><%= ticket.id%></td>
      <td><%= ticket.train.number%></td>
      <td><%= ticket.first_station.title%></td>
      <td><%= ticket.last_station.title %></td>
      <%= render ticket %>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<p><%= link_to t('.new'), new_admin_ticket_path(ok: 'ok') %></p>
<p><%= link_to t('common.back'), welcome_index_path %></p>