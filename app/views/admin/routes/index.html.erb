<p id="notice"><%= notice %></p>

<h1><%= t('.plural') %></h1>

<table>
  <thead>
  <tr>
    <th><%= t('.route_name') %></th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @routes.each do |route| %>
    <tr>
      <td><%= route.name %></td>
      <td><%= link_to t('activerecord.attributes.show'), admin_route_path(route) %></td>
      <td><%= link_to t('activerecord.attributes.edit'), edit_admin_route_path(route) %></td>
      <td><%= link_to t('activerecord.attributes.destroy'), admin_route_path(route), method: :delete, data: { confirm: t('activerecord.destroy_confirm') } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.new'), new_admin_route_path %>
<p><%= link_to t('common.back'), welcome_index_url %></p>