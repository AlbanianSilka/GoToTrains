<h1><%= t('.plural') %></h1>

<table class="table">
  <thead>
  <tr>
    <th>Title</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @routes.each do |route| %>
    <tr>
      <td>
        <div id="route_title_<%= route.id %>">
          <%= route.name %>
        </div>
        <%= render 'form', route: route, hidden: true %>
      </td>
      <td><%= link_to t('common.show'), admin_route_path(route) %></td>
      <td><%= link_to t('common.edit'), '', class: 'edit_route_btn', data: { route_id: route.id } %></td>
      <td><%= link_to t('common.destroy'), admin_route_path(route), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.new'), new_admin_route_path %>
<p><%= link_to t('common.back'), welcome_index_path %></p>