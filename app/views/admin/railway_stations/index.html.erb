<h1><%= t('admin.railway_stations.plural') %></h1>

<table class="table">
  <thead>
  <tr>
    <th><%= t('activerecord.attributes.railway_station.title') %></th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @railway_stations.each do |railway_station| %>
    <tr>
      <td>
        <div id="railway_station_title_<%= railway_station.id %>">
          <%= railway_station.title %>
        </div>
        <%= render 'form', station: railway_station, hidden: true %>
      </td>
      <td><%= link_to t('common.show'), [:admin, railway_station] %></td>
      <td><%= link_to t('common.edit'), '', class: 'edit_station', data: { station_id: railway_station.id } %></td>
      <td><%= link_to t('common.destroy'), [:admin, railway_station], method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<p><%= link_to t('.new'), new_admin_railway_station_path %></p>
<p><%= link_to t('common.back'), welcome_index_path %></p>
