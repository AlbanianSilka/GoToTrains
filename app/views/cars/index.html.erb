<p id="notice"><%= notice %></p>

<h1>Вагоны</h1>

<table>
  <thead>
  <tr>
    <th>Номер вагона и его тип </th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @cars.each do |car| %>
    <tr>
      <td><%= car.number%></td>
      <td><%= car.car_type%></td>
      <td><%= link_to 'Показать вагон', car %></td>
      <td><%= link_to 'Редактировать вагон', edit_car_path(car) %></td>
      <td><%= link_to 'Удалить вагон', car, method: :delete, data: { confirm: 'Вы уверены, что хотите удалить этот вагон?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить вагон', new_car_path %>