<p id="notice"><%= notice %></p>

<h1>Train Routes</h1>

<table>
  <thead>
  <tr>
    <th>Название маршрута</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @routes.each do |route| %>
    <tr>
      <td><%= route.name %></td>
      <td><%= link_to 'Показать маршрут', route %></td>
      <td><%= link_to 'Редактировать маршрут', edit_route_path(route) %></td>
      <td><%= link_to 'Удалить маршрут', route, method: :delete, data: { confirm: 'Вы уверены, что хотите удалить этот маршрут?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить маршрут', new_route_path %>